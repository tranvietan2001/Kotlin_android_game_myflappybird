<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBirdShop"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/bird1_down" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/coin_silver"
                    tools:ignore="InefficientWeight" />

                <TextView
                    android:id="@+id/coinSilverTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="24dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/flappybird_number"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:text="1234567890"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    tools:ignore="TextViewEdits"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font_mybird_default"
                    android:gravity="center"
                    android:text="OR"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/coin_gold"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/coinGoldTxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="24dp"
                    android:autofillHints=""
                    android:ems="10"
                    android:fontFamily="@font/flappybird_number"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:text="9876543210"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    tools:ignore="TextViewEdits" />
            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/buyShopBtn"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:gravity="center"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/buy_button_en" />

    </LinearLayout>
</androidx.cardview.widget.CardView>